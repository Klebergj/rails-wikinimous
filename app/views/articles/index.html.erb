<div class="container">
<div class="row">
  <h1 class="article">Articles</h1>
  <div><%= link_to "New article", new_article_path  %></div>
</div>
  <% @articles.each do |article| %>
  <div class="row">
    <div class="article">
      <h2> <%= link_to article.title, article_path(article) %></h2>
      <%= article.content %>
    </div>
    <div>
      <%= link_to "", article_path(article),
      method: :delete,
      data:{confirm: "Are you sure?"},class: "far fa-trash-alt" %>
    </div>
  </div>
  <% end %>
</div>
